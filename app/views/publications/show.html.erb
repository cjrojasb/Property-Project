<body>
  <div class="container">
    <section class="show-property">
      <%= link_to 'Volver a Avisos', publications_path %>
      <div class="row">
        <div class="col-md-12 jumbotron">
          <div class="col-md-7 title-show">
            <p id="notice"><%= notice %></p>
            <h2><%= @publication.title %></h2>
          </div>

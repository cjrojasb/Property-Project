            <div class="col-md-12">
              <h3 class="subtitle text-center">Datos del Vendedor</h3>
              <span><%# @publication.increment %></span>
              <hr class="separator">
              <div class="col-md-9">
                <div class="show-seller">
                  <span>
                    <i class="glyphicon glyphicon-user" aria-hidden="true"></i> 
                    <%= @publication.user.name %>
                  </span>
                  <span>
                    <i class="fa fa-envelope-o bold" aria-hidden="true"></i> 
                    <%= @publication.user.email %>
                  </span>
                  <span>
                    <i class="glyphicon glyphicon-phone bold" aria-hidden="true"></i> 
                    <%= @publication.user.phone %>
                  </span>
                </div>
              </div>
              <div class="col-md-3">
                <%= image_tag(@publication.user.avatar, class: 'img-profile-show') %>
              </div>
            </div>
          </div>

        </div>

        <!--
        <div class="row">
          <div class="col-md-4 show-information">

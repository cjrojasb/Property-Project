<!-- Formulario de New Property -->
<div class="col-md-6">
  <div class="row">
    <div class="col-md-offset-2 col-md-9">
      <%= form_for(publication, class:"form-horizontal") do |f| %>
        <% if publication.errors.any? %>
        <div class="alert alert-danger text-center">
          <%# pluralize(publication.errors.count, "error") %>
          <h3><strong>Oh No!</strong></h3>
          <p>Ha ocurrido un error</p>
          <ul>
            <% publication.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>
        <!-- -->
        <h3 class="subtitle-form-property text-center">Ingresa los datos de tu Propiedad</h3>
        <br>
        <!-- Form -->   
        <div class="form-group">
          <label for="category">Categoría</label>
          <%= f.collection_select :category_id, @categories, :id, :name, {prompt: "Escoge una categoría"}, class: 'form-control' %>
        </div>
        <div class="form-group">
          <label for="type">Tipo</label>
          <%= f.collection_select :type_id, @types, :id, :name, {prompt: "Escoge un tipo de inmueble"}, {class: 'form-control'} %>
        </div>
        <div class="form-group">
          <label for="title">Título</label>
          <%= f.text_field :title, class: 'form-control', placeholder: "Ej: Vendo casa en Vitacura" %>
        <% if publication.errors[:title].any? %>
          <span class="label label-danger">
            <% publication.errors[:title].each do |message| %>
              <%= message %>
            <% end %>
          </span>
        <% end %>
        </div>
        <div class="form-group">
          <label for="region">Región</label>
          <%= f.collection_select :region_id, @regions, :id, :name, {}, {class: 'form-control'} %>
        </div>
        <div class="form-group">
          <label for="commune">Comuna</label>
          <%= f.collection_select :commune_id, @communes, :id, :name, {}, {class: 'form-control'} %>
        </div>
        <div class="form-group">
          <label for="beedrom">Dormitorios</label>
          <%= f.select(:bedroom, options_for_select([['1 Dormitorio', '1'], ['2 Dormitorios', '2'],['3 Dormitorios', '3'],['4 o más Dormitorios', '4']]),{},class: 'form-control') %>
        </div>
        <div class="form-group">
          <label for="bath">Baños</label>
          <%= f.select(:bath, options_for_select([['1 Baño', '1'], ['2 Baños', '2'],['3 Baños', '3'],['4 o más Baños', '4']]),{},class: 'form-control') %>
        </div>
        <div class="form-group">
          <label for="parking">Estacionamiento</label>
          <%= f.select(:parking, options_for_select([['1 Estacionamiento', '1'], ['2 Estacionamientos', '2'], ['3 Estacionamientos', '3'], ['4 o más Estacionamientos', '4']]),{},class: 'form-control') %>
        </div>
        <div class="form-group">
           <%= f.label :equipments_ids, "Equipamiento" %>
            <div class="row">
              <%= collection_check_boxes(:publication, :equipments_ids, Equipment.all, :id, :name, checked: publication.equipments.map(&:id)) do |b|%> 
                <div class="col-md-6">  <%= b.label { b.check_box + b.text } %></div>
              <% end %>
            </div>
         </div>
        <div class="form-group">
          <label for="description">Descripción</label>
          <%= f.text_area :description, class: 'form-control', placeholder: "Ej: Aire acondicionado - Piscina - Jardin"%>
        </div>
        <div class="form-group">
          <label for="price">Precio</label>
          <%= f.number_field :price, class: 'form-control', placeholder: "Ej: 3000 UF"%>
        </div>

        <!--
        <div class="form-group">
          <%# @publication.categories.each do |cat| %>
            <%# if cat.name == 'Arrendar' %>
              <label for="price">Precio Mensual</label>
              <%# f.number_field :price, class: 'form-control', placeholder: "Ej: 3000 UF"%>
            <%# end %>
            <%# if cat.name == 'Vender' %>
              <label for="price">Precio en Milllones</label>
              <%# f.number_field :price, class: 'form-control', placeholder: "Ej: 3000 UF"%>
            <%# end %>
          <%# end %>
         </div>
         -->
 
        <div class="form-group actions">
          <div class="row">
            <div class="col-md-offset-2 col-md-3">
              <%= link_to 'Volver', publications_path, class: 'btn btn-danger' %>
            </div>
            <div class="col-md-1">
              <%= f.submit 'Crear Publicación', class: 'btn btn-success' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


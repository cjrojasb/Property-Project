<div class="vertical-center"">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3"> 
          <div class="panel panel-default devise-bs">
            <div class="panel-heading text-center">
              <h4><strong>Editar Cuenta</strong></h4>
            </div>
          <div class="panel-body">
          <%= bootstrap_devise_error_messages! %>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <div class="form-group">
                <%= f.label :name, "Nombre" %>
                <%= f.text_field :name, autofocus: true, class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label :phone, "Celular" %>
                <%= f.text_field :phone, class: 'form-control' %>
              </div>
              <div class="field"> 
                <%= f.label :avatar, "Perfil" %>
                <% if current_user.avatar.url.present? %>
                  <%= image_tag(current_user.avatar.url, class: 'img-circle')%>
                  <%= f.label :remove_avatar do %>
                    <%= f.check_box :remove_avatar %>
                    Eliminar
                  <% end %>
                <% end %>
                <%= f.file_field :avatar %>
                <%= f.hidden_field :avatar_cache %>
              </div>
              <div class="form-group">
                <%= f.label :email, "E-mail" %>
                <%= f.email_field :email, class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label :password, "Contrase単a" %> 
                <i>(dejar en blanco si no desea cambiar su contrase単a)</i>
                <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label :password_confirmation, "Confirmar Contrase単a" %>
                <%= f.password_field :password_confirmation, class: 'form-control'  %>
              </div>
              <div class="form-group">
                <%= f.label :current_password %> 
                <i>(ingrese su contrase単a actual para confirmar los cambios)</i>
                <%= f.password_field :current_password, class: 'form-control' %>
              </div>
              <p><%= f.submit "Editar", class: 'btn btn-primary btn-sm' %></p>
            <% end %>
            <h4><i>Quieres eliminar tu cuenta ?</i></h4> 
            <%= button_to "Eliminar Cuenta", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger btn-sm" %>
            <hr class="separator">
            <%= link_to "Back", :back %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

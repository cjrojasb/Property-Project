<header>
    <div class="header-content">
        <div class="header-content-inner">
            <div class="row">
                <div class="col-md-12">
                    <h1 id="homeHeading" class="home-title">Publica tu propiedad en el portal Inmobiliario m√°s grande de <span class="bold">Chile</span></h1>
                    <br>
                </div>
                <div id="custom-search-input">
                <%= form_tag(publications_path, method: :get) do %>
                   <div class="input-group col-md-offset-2 col-md-8">
                       <%= text_field_tag :search_title, nil, placeholder: 'Ej: Casa en Santiago, departamento', class: "form-control" %>
                       <span class="input-group-btn">
                           <%= button_tag(type: "submit", class: "btn btn-primary btn-md") do %>
                               <span class="glyphicon glyphicon-search"></span>
                           <% end %>
                       </span>
                   </div>
                   <% end %>
               </div>
               <hr>
           </div>
            <a href="#about" class="btn btn-primary btn-xl page-scroll">Avisos Recientes</a>
            <%= link_to "Publicar", new_publication_path, class: 'btn btn-primary btn-xl' %>
            <%= link_to "Ver Avisos", publications_path, class: 'btn btn-primary btn-xl' %>
        </div>
    </div>
</header>